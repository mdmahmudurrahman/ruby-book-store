.header
  %nav.navbar.navbar-default
    .navbar-header
      %button.navbar-toggle.collapsed(aria-controls="navbar" aria-expanded="false" data-target="#navbar" data-toggle="collapse" type="button")
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar

      = link_to 'The Bookstore', root_path, class: 'navbar-brand'

    #navbar.collapse.navbar-collapse
      %ul.nav.navbar-nav.navbar-right.text-center
        %li= link_to t('.nav.home'), root_path
        %li= link_to t('.nav.store'), store_path
        %li= link_to t('.nav.cart'), cart_path

        - if current_user

          %li= link_to t('.nav.orders'), orders_path
          %li= link_to t('.nav.settings'), settings_path
          %li= link_to t('.nav.logout'), destroy_user_session_path, method: :delete

        - else

          %li= link_to t('.nav.signin'), new_user_session_path
