<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post, class: 'form-reset-password'}) do |f| %>
    <%= devise_error_messages! %>

    <h2 class="text-center">
      <%= t('devise.forms.reset-pwd.form-title') %>
    </h2>

    <div class="field">
      <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: true, required: true %>
    </div>

    <div class="actions" style="margin-top: 5px">
      <%= f.submit t('devise.forms.reset-pwd.reset-pwd-button-text'), class: 'btn btn-primary' %>
    </div>

    <%= render 'users/shared/links' %>
<% end %>